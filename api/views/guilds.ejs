<style>
    .guild-card { border: 1px solid #ccc; padding: 10px; margin: 10px; border-radius: 8px; display: flex; align-items: center; }
    .guild-icon { width: 50px; height: 50px; border-radius: 50%; margin-right: 15px; background: #eee; }
    .btn { background: #5865F2; color: white; padding: 5px 10px; text-decoration: none; border-radius: 4px; margin-left: auto; }
</style>

<div class="sidebar">
    <h2>サーバーの一覧</h2>
    <a href="/" class="nav-item active">トップに戻る</a>
</div>

<div class="main-content">
    <p>ユーザー: <%= user.name %> さん</p>

    <% if (guilds.length === 0) { %>
        <p>表示できるサーバーがありません。</p>
    <% } else { %>
        <div class="guild-list">
            <% guilds.forEach(guild => { %>
                <div class="guild-card">
                    <img class="guild-icon" src="<%= guild.icon ? `https://cdn.discordapp.com/icons/${guild.id}/${guild.icon}.png` : 'https://via.placeholder.com/50' %>" alt="icon">
                    
                    <div class="guild-info">
                        <strong><%= guild.name %></strong><br>
                        <small>ID: <%= guild.id %></small>
                    </div>

                    <a href="/guilds/<%= guild.id %>" class="btn">管理画面</a>
                </div>
            <% }); %>
        </div>
    <% } %>
</div>